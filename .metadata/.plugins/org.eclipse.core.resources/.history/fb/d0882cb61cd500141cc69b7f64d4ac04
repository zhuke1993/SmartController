package servlet;

import java.sql.*;

/**
 * Created by zhuke on 2015/3/26.
 */
public class LoginDB {

    public static int login(String user_id, String user_pwd) {
        try {
            Class.forName("com.mysql.jdbc.Driver");
            Connection connection = DriverManager.getConnection("jdbc:mysql://zk929184318.gotoftp3.com:3306/zk929184318", "zk929184318", "929184318");
            PreparedStatement pstm = connection.prepareStatement("select COUNT(*) from sc_users where user_id =? and user_pwd =? ");
            pstm.setString(1, user_id);
            pstm.setString(2, user_pwd);
            ResultSet rs = pstm.executeQuery();
            if (rs.next()) {
                return rs.getInt(1);
            }
        } catch (ClassNotFoundException e) {
            e.printStackTrace();
        } catch (SQLException e) {
            e.printStackTrace();
        }
        return 0;
    }
}
